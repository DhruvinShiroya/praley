<div class="container mt-5">
  <form class="mt-3" method="post">
    <div class="form-group">
      {{#if searchError}}
        <p class="danger">{{searchError}}</p>
      {{/if}}
      <label for="username">Enter the username for receiver</label>
      <input
        type="email"
        class="form-control"
        id="username"
        name="username"
        required
      /><button type="submit" class="btn btn-primary">find</button>
    </div>

  </form>
  <h1>Contacts</h1>
  <h2>{{user.username}}</h2>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each result}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.contactEmail}}</td>
          <td>{{toShortDate this.date}}</td>
          <td>
            <a href="/message/{{this.name}}" class="btn btn-primary">Message</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>